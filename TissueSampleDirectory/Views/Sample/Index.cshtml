@model IEnumerable<TissueSampleDirectory.Models.SampleModels>


<h3>Collection Type: @ViewBag.CollectionTitle</h3>


    <div style="margin-top: 50px">

        <p>
            @Html.ActionLink("Create New", "Create", new { Title = Request["Title"] }, new { @class = "btn btn-success" })
            @Html.ActionLink("Back to Collection List", "Index", "Collection", new { Title = Request["Title"] }, new { @class = "btn btn-primary", @style = "margin-left:30px" })
        </p>
        <table class="table">
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.Donor_Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Material_Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Last_Updated)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Donor_Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Material_Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last_Updated)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id, Title = Request["Title"] }, new { @class="btn btn-primary btn-sm "})
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id, Title = Request["Title"] }, new { @class = "btn btn-danger btn-sm " })
                    </td>
                </tr>
            }

        </table>
     </div>
